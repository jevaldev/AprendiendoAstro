<style>
  .wave svg {
    display: block;
    width: 100%;
    height: auto;
  }

  .wave {
    flex: 1;
    background-color: var(--clr-tertiary);
    padding-block: 7rem;
    position: relative;
    width: 100%;
  }

  .wave::after,
  .wave::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100px;
    background: #ffff;
    -webkit-mask-image: url("../assets/wave.svg");
    -webkit-mask-size: 100% 100px;
  }

  .wave::before {
    top: 0;
    left: 0;
    transform: rotate(0.5turn);
  }
  .wave::after {
    bottom: 0;
    left: 0;
  }
  h2 {
    font-size: 2rem;
    color: var(--clr-primary);
    font-weight: 700;
    margin: 0;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: auto;
    padding-inline: 1rem;
    gap: 0.5rem;

    a {
      flex-shrink: 0;
      color: #5e5e5e;
      text-decoration: none;
    }
    a:hover {
      color: var(--clr-primary);
      text-decoration: underline;
    }
  }

  .posts {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    justify-content: center;
    align-items: center;
    gap: 2rem;
    max-width: 1200px;
    margin: auto;
  }

  @media screen and (max-width: 600px) {
    header {
      flex-direction: column;
      align-items: flex-start;
      margin-bottom: 2rem;
    }
    h2 {
      font-size: 1.5rem;
    }
  }
</style>
