<style>
  .wave svg {
    display: block;
    width: 100%;
    height: auto;
  }

  .wave {
    background-color: #a8dadc7e;
    padding-block: 7rem;
    position: relative;
  }

  .wave::after,
  .wave::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100px;
    background: #ffff;
    -webkit-mask-image: url("../assets/wave.svg");
    -webkit-mask-size: 100% 100px;
  }

  .wave::before {
    top: 0;
    left: 0;
    transform: rotate(0.5turn);
  }
  .wave::after {
    bottom: 0;
    left: 0;
  }
  h2 {
    font-size: 2rem;
    color: #1d3557;
    font-weight: 700;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: auto;

    a {
      color: #5e5e5e;
      text-decoration: none;
    }
    a:hover {
      color: #1d3557;
      text-decoration: underline;
    }
  }

  .posts {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    max-width: 1200px;
    margin: auto;
  }
</style>
