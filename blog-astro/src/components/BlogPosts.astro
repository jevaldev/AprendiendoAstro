<style>
  section {
    width: min(100% - 2rem, 1200px);
    margin: 3rem auto;
  }

  h2 {
    font-size: 1.8rem;
    color: var(--clr-primary);
    margin: 0.5rem 0rem;
  }

  .posts {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  small {
    font-size: 0.9rem;
    color: #5e5e5e;
  }
</style>
