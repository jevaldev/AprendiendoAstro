---
 import GitHubIcon from '../assets/github.svg';
 import LinkedInIcon from '../assets/linkedin.svg';
 import Mail from '../assets/mail.svg';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <header>
      <p class="username">JevalDEV</p>
      <nav>
        <ul>
          <li><a href="/">Inicio</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </nav>
    </header>
    <aside>
      <ul>
        <li>
          <a href="">
            <GitHubIcon class="icon" />
            <p>GitHub</p>
          </a>
        </li>
        <li>
          <a href="">
            <LinkedInIcon class="icon" />
            <p>LinkedIn</p>
          </a>
        </li>
        <li>
          <a href="">
            <Mail class="icon" />
            <p>Gmail</p>
          </a>
        </li>
      </ul>
    </aside>
    <slot />
  </body>
</html>

<style>
  :root {
    --clr-primary: #1d3557;
    --clr-secondary: #457b9d;
    --clr-tertiary: #a8dadc;
    --clr-complementary: #e84c58;
    --clr-neutral: #f1faee;
  }
  html,
  body {
    font-family: poppins, sans-serif;
    margin: 0;
    padding: 0;
    margin: auto;
  }

  aside {
    position: fixed;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    padding: 1rem;
    border-radius: 12px 0 0 12px;
    z-index: 100;
  }

  aside ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  aside li {
    display: flex;
    align-items: center;
    padding: 0.5rem 1rem;
    transform: translateX(80px);
    border-radius: 8px;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  /* Solo el li crece */
  aside li:hover {
    transform: scale(1.05);
    background-color: #1a2a46;
  }

  aside li a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: black;
  }

  aside li svg {
    width: 24px;
    height: 24px;
    transition: color 0.3s ease, background-color 0.1s ease-in;

    background-color: var(--clr-tertiary);
    border-radius: 50%;
    padding: 0.5rem;
  }

  /* El texto oculto con opacity y desplazamiento */
  aside li a p {
    opacity: 0;
    transform: translateX(10px);
    transition: all 0.3s ease;
    margin: 0;
    font-size: 1rem;
    white-space: nowrap;
  }

  /* Mostrar solo el p del li en hover */
  aside li:hover a p {
    opacity: 1;
    transform: translateX(0);
    color: white;
  }

  aside li:hover a svg {
    background-color: inherit;
    color: white;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: min(100% - 2rem, 1200px);
    margin: auto;
  }

  ul {
    padding: 0;
    display: flex;
    list-style: none;
    gap: 2rem;
    font-size: 1.4rem;
    font-weight: 600;
    a {
      text-decoration: none;
      color: black;
    }
    a:hover {
      color: #457b9d;
    }
  }  
  
  .username {
    font-size: 2.5rem;
    color: #1d3557;
    font-weight: 700;
  }

  @media screen and (max-width: 600px) {
    header { 
      ul {
        gap: 1rem
      }
      a {
      font-size: 1rem;
    }
  }  
</style>
